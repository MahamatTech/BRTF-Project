@model BrtfProject.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User: @Model.FullName</h1>

<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" name="Email" value="@User.Identity.Name" />
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <input asp-for="StudentID" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramTerm.Term" class="control-label"></label>
                <input asp-for="ProgramTerm.Term" class="form-control" />
                <span asp-validation-for="ProgramTerm.Term" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Purge" /> @Html.DisplayNameFor(model => model.Purge)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

    <div>
        <a asp-action="Details">Back to Account Details</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
