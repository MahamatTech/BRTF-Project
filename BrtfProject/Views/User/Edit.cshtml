@model BrtfProject.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User: @Model.FullName</h1>

<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" name="Email" value="@User.Identity.Name" />
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="StudentID" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TermLevel" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="TermLevel" class="form-control" />
                <span asp-validation-for="TermLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramTermId" class="control-label"></label>
                <a class="require">*</a>
                <select asp-for="ProgramTermId" class="form-control" asp-items="ViewBag.ProgramTermId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Term" class="control-label"></label>
                <a class="require">*</a>
                <select asp-for="TermId" class="form-control" asp-items="ViewBag.TermId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserGroup" class="control-label"></label>
                <a class="require">*</a>
                <select asp-for="UserGroupId" class="form-control" asp-items="ViewBag.UserGroupId"></select>
            </div>
            <div class="form-group form-check">
                <a class="require">Is this the last term until this student graduates?</a>
                <br />
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LastLevel" /> @Html.DisplayNameFor(model => model.LastLevel)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Purge" /> @Html.DisplayNameFor(model => model.Purge)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

    <div>
        <a asp-action="Details">Back to Account Details</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
