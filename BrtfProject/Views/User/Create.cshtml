@model BrtfProject.Models.User

@{
    ViewData["Title"] = "Create Account Details";
}

<h2>New Account Details</h2>

<h4>Create Account for @User.Identity.Name</h4>
<hr />

<style>
    .require {
        color: red;
    }
</style>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="Email" value="@User.Identity.Name"/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="StudentID" class="form-control" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <a class="require">*</a>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramTermId" class="control-label"></label>
                <a class="require">*</a>
                <select asp-for="ProgramTermId" class="form-control" asp-items="ViewBag.ProgramTermId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
