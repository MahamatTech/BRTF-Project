@model IEnumerable<BrtfProject.Models.ProgramTerm>

@{
    ViewData["Title"] = "Index";
}

<h1>Programs</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Program</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-horizontal">
        <button class="btn btn-outline-secondary" type="button" data-toggle="collapse" id="filterToggle" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filter/Search
        </button>
        <div class="collapse @(ViewData["Filtering"])" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Program Description:</label>
                        @Html.TextBox("SearchStringInfo", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Program Code:</label>
                        @Html.TextBox("SearchProgramCode", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-4">
                        <label class="control-label">Search User Group:</label>
                        @Html.DropDownList("UserGroupId", null, "All User Groups", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserGroup.UserGroupName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgramCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserGroup.UserGroupName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <partial name="_PagingNavBar" />
</form>